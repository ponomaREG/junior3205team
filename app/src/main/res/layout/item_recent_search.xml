<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/item_recent_search_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constrainedWidth="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_recent_search_ic_arrow"
        android:textSize="@dimen/item_recent_search_text_textSize"
        android:textColor="@color/primary_text_color"
        tools:text="@tools:sample/lorem"
        />
    <ImageView
        android:id="@+id/item_recent_search_ic_arrow"
        android:layout_width="@dimen/item_recent_search_ic_arrow_side"
        android:layout_height="@dimen/item_recent_search_ic_arrow_side"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/item_recent_search_ic_arrow_tint"
        app:srcCompat="@drawable/ic_arrow"
        android:rotation="225"
        android:contentDescription="@string/item_recent_search_ic_arrow_cd" />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>