<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/search_guideline_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_begin="@dimen/search_guideline_left"
        android:orientation="vertical"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/search_guideline_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_end="@dimen/search_guideline_right"
        android:orientation="vertical"
        />
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/search_toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:titleMarginStart="@dimen/search_toolBar_title_margin_start"
        style="@style/ToolBar"
        />
    <EditText
        android:id="@+id/search_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constrainedWidth="true"
        app:layout_constraintTop_toBottomOf="@id/search_toolBar"
        app:layout_constraintStart_toStartOf="@id/search_guideline_left"
        app:layout_constraintEnd_toStartOf="@id/search_button_commit"
        android:hint="@string/search_hint"
        android:textColor="@color/primary_text_color"
        android:textSize="@dimen/search_input_textSize"
        android:importantForAutofill="no"
        tools:text="ponomaREG"/>
    <ImageView
        android:id="@+id/search_button_commit"
        android:layout_width="@dimen/search_button_commit_side"
        android:layout_height="@dimen/search_button_commit_side"
        app:layout_constraintTop_toBottomOf="@id/search_toolBar"
        app:layout_constraintBottom_toBottomOf="@id/search_input"
        app:layout_constraintEnd_toEndOf="@id/search_guideline_right"
        app:tint="@color/search_button_commit_tint"
        app:srcCompat="@drawable/ic_search"
        />
    <ProgressBar
        android:id="@+id/search_progress"
        android:layout_width="@dimen/search_progress_side"
        android:layout_height="@dimen/search_progress_side"
        app:layout_constraintTop_toBottomOf="@id/search_toolBar"
        app:layout_constraintBottom_toBottomOf="@id/search_input"
        app:layout_constraintEnd_toEndOf="@id/search_guideline_right"
        app:srcCompat="@drawable/ic_search"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/search_button_cancel"
        android:layout_width="@dimen/search_button_cancel_side"
        android:layout_height="@dimen/search_button_cancel_side"
        app:layout_constraintTop_toBottomOf="@id/search_toolBar"
        app:layout_constraintBottom_toBottomOf="@id/search_input"
        app:layout_constraintEnd_toStartOf="@id/search_button_commit"
        android:layout_marginEnd="@dimen/search_button_cancel_margin_end"
        app:srcCompat="@drawable/ic_cancel"
        app:tint="@color/search_button_cancel_tint"
        android:visibility="gone"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_repos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/search_input"
        app:layout_constraintStart_toStartOf="@id/search_guideline_left"
        app:layout_constraintEnd_toEndOf="@id/search_guideline_right"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        tools:listitem="@layout/item_repository"
        tools:itemCount="3"
        />
    <androidx.constraintlayout.widget.Group
        android:id="@+id/search_group_recent_searches"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:constraint_referenced_ids="search_recent_searches_title, search_recent_searches_button_clear, search_recent_searches"
        />
    <TextView
        android:id="@+id/search_recent_searches_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/search_input"
        app:layout_constraintStart_toStartOf="@id/search_guideline_left"
        android:layout_marginTop="@dimen/search_recent_searches_title_margin_top"
        android:textSize="@dimen/search_recent_searches_title_textSize"
        android:textColor="@color/primary_text_color"
        android:textStyle="bold"
        android:text="@string/search_recent_searches_title"
        />
    <TextView
        android:id="@+id/search_recent_searches_button_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/search_recent_searches_title"
        app:layout_constraintEnd_toEndOf="@id/search_guideline_right"
        android:layout_marginTop="@dimen/search_recent_searches_button_clear_margin_top"
        android:textSize="@dimen/search_recent_searches_button_clear_textSize"
        android:textColor="@color/hyperlink_text_color"
        android:textAllCaps="true"
        android:text="@string/search_recent_searches_button_clear"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_recent_searches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constrainedWidth="true"
        app:layout_constraintTop_toBottomOf="@id/search_recent_searches_title"
        app:layout_constraintStart_toStartOf="@id/search_guideline_left"
        app:layout_constraintEnd_toEndOf="@id/search_guideline_right"
        android:layout_marginTop="@dimen/search_recent_searches_margin_top"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        tools:listitem="@layout/item_recent_search"
        tools:itemCount="3"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>